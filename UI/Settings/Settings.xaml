    </UserControl.Resources>
    <Grid>
        <UniformGrid Columns="1">
            <GroupBox Header="Networking">
                <StackPanel>
                    <WrapPanel>
                        <TextBlock Width="80" Margin="5,6" HorizontalAlignment="Right" Text="Bind Address" VerticalAlignment="Center"/>
                        <TextBox Margin="5,5" HorizontalAlignment="Left" ToolTip="IP Address used to communicate" Text="{Binding Path=BindAddress, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="150" BorderBrush="DarkGray"  />
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Width="80" Margin="5,6" HorizontalAlignment="Right" Text="Server Port" VerticalAlignment="Center"/>
                        <TextBox Margin="5,5" HorizontalAlignment="Left" ToolTip="Port to communicate on" Text="{Binding Path=ServerPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="50" BorderBrush="DarkGray"  />
                    </WrapPanel>
                    <WrapPanel>
                        <TextBlock Margin="5,5" HorizontalAlignment="Right" Text="Update Interval" VerticalAlignment="Center"/>
                        <TextBox Margin="5,5" HorizontalAlignment="Left" ToolTip="How fast bots will send updates to each other about their position etc" VerticalAlignment="Center" Text="{Binding Path=UpdateInterval, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="30"/>
                        <TextBlock Margin="0,5" HorizontalAlignment="Left" Text="ms" VerticalAlignment="Center"/>
                    </WrapPanel>
                </StackPanel>
            </GroupBox>
            <GroupBox Header="Coodination">
                <UniformGrid>
                    <WrapPanel>
                        <TextBlock Margin="5,5" HorizontalAlignment="Right" Text="Teleport Distance" VerticalAlignment="Center" ToolTip="How far away bots need to be from leader before teleporting"/>
                        <TextBox Margin="5,5" HorizontalAlignment="Left" ToolTip="How far away bots need to be from leader before teleporting" Text="{Binding Path=TeleportDistance, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="40" BorderBrush="DarkGray"  />
                    </WrapPanel>
                    <!--<WrapPanel>
                        <TextBlock Margin="5,5" HorizontalAlignment="Right" Text="Player Whitelist" VerticalAlignment="Center" ToolTip="How far away bots need to be from leader before teleporting"/>
                        <TextBox Margin="5,5" HorizontalAlignment="Left" ToolTip="How far away bots need to be from leader before teleporting" Text="{Binding Path=ServerPort, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" Width="30" BorderBrush="DarkGray"  />
                    </WrapPanel>-->
                </UniformGrid>
            </GroupBox>
            <GroupBox Header="Misc">
                <UniformGrid Columns="1">
                    <StackPanel>
                        <WrapPanel>
                            <CheckBox Margin="5,6,5,0" IsEnabled="True" ToolTip="Bots will leave any game/party that has players it's not connected to via DemonBuddy"  IsChecked="{Binding Path=AvoidUnknownPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" >
                                <TextBlock Margin="1,1" Text="Avoid Unknown Players" ToolTip="Bots will leave any game/party that has players it's not connected to via DemonBuddy" />
                            </CheckBox>
                        </WrapPanel>
                        <WrapPanel>
                            <CheckBox Margin="5,6,5,0" IsEnabled="True" ToolTip="Spams the console with lots of information" IsChecked="{Binding Path=DebugLogging, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center">
                                <TextBlock Margin="1,1" Text="Debug Logging" VerticalAlignment="Center" ToolTip="Spams the console with lots of information"/>
                            </CheckBox>
                        </WrapPanel>
                    </StackPanel>
                </UniformGrid>
            </GroupBox>
        </UniformGrid>

    </Grid>
</UserControl>
